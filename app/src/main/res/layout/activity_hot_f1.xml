<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hot.HotF1">

    <androidx.appcompat.widget.Toolbar
        app:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_hf_name"
                android:textSize="20sp"
                android:text="热点"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="70dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_margin="10dp"
                    android:id="@+id/img_hf_photo"
                    android:src="@drawable/img_add"
                    android:layout_gravity="center"
                    app:riv_oval="true"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_hf_neckname"
                        android:gravity="left|center"
                        android:layout_weight="1"
                        android:hint="昵称"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <ImageView
                                android:id="@+id/iv_hf_gender"
                                android:src="@drawable/girl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/tv_hf_signature"
                            android:gravity="left|center"
                            android:text="个性签名"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>

                </LinearLayout>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_marginRight="20dp"
                    android:id="@+id/img_hf_add"
                    android:src="@drawable/img_add"
                    android:layout_gravity="center"
                    app:riv_oval="true"
                    android:layout_width="24dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_margin="30dp"
                    android:id="@+id/tv_hf_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="2dp"
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_margin="2dp"
                        android:background="@drawable/bg_f4_1"
                        android:id="@+id/tv_hf_add"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="收藏"
                        android:textSize="14sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_hf_zan"
                        android:gravity="right|center"
                        android:layout_weight="1"
                        android:text="200+"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/iv_hf_dianzan"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="7dp"
                        android:layout_weight="1"
                        android:src="@drawable/dianzan" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_hf_ping"
                        android:gravity="right|center"
                        android:layout_weight="1"
                        android:text="100+"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:id="@+id/img_hf_ping"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/pinglun"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/tv_hf_zhuan"
                        android:gravity="right|center"
                        android:layout_weight="1"
                        android:text="50+"
                        android:textSize="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <ImageView
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/zhuanfa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_hf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

            <LinearLayout
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <EditText
                    android:id="@+id/et_hf_massage"
                    android:layout_weight="1"
                    android:gravity="left|bottom"
                    android:textSize="12sp"
                    android:hint="发个消息试试吧"
                    android:layout_margin="2dp"
                    android:background="@drawable/bg_circle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <Button
                    android:id="@+id/bt_hf_send"
                    android:layout_margin="3dp"
                    android:background="@drawable/bg_f4_1"
                    android:text="发送"
                    android:layout_width="60dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>